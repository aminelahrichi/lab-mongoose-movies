<h2>Edit a movie</h2>
<form method="post" action="/movies/{{movie.id}}/edit">
    <label for="title">Title</label>
    <input type="text" class="input" name="title" value="{{movie.title}}">
    <label for="genre">Genre</label>
    <input type="text" class="input" name="genre" value="{{movie.genre}}">
    <label for="plot">Plot</label>
    <input type="text" class="input" name="plot" value="{{movie.plot}}">
    <button>Edit movie</button>
</form>